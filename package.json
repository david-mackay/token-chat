{
  "name": "token-chat",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "prebuild": "rm -rf dist",
    "build": "npm run server:build && next build",
    "start": "NODE_ENV=production concurrently \"next start\" \"node dist/server/index.js\"",
    "server:dev": "ts-node-dev --project tsconfig.server.json --respawn --transpile-only src/server/index.ts",
    "server:build": "echo 'Building server...' && tsc --project tsconfig.server.json",
    "server:start": "node dist/server/index.js"
  },
  "dependencies": {
    "@reown/appkit": "^1.6.0",
    "@reown/appkit-adapter-solana": "^1.6.0",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@tanstack/react-query": "^5.64.2",
    "@types/ws": "^8.5.14",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "lucide-react": "^0.474.0",
    "next": "15.1.6",
    "pg": "^8.13.1",
    "pino-pretty": "^13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io-client": "^4.8.1",
    "tanstack": "^1.0.0",
    "ts-node-dev": "^2.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/pg": "^8.11.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
