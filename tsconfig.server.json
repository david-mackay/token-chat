{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "ESNext",
      "outDir": "dist/server",
      "rootDir": "src/server",
      "target": "ES2022",
      "isolatedModules": true,
      "noEmit": false,
      "preserveWatchOutput": true,
      "moduleResolution": "node"
    },
    "include": ["src/server/**/*"],
    "exclude": ["node_modules"]
  }